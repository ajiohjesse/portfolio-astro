---
import BaseHead from '../../components/BaseHead.astro';
import Header from '../../components/Header.astro';
import Footer from '../../components/Footer.astro';
import { SITE_TITLE, SITE_DESCRIPTION } from '../../consts';
import { getCollection } from 'astro:content';
import FormattedDate from '../../components/FormattedDate.astro';
import BgGlow from '@/components/BgGlow.astro';

const posts = (await getCollection('blog'))
  .filter(post => post.data.isPublished)
  .sort((a, b) => b.data.publishedAt.valueOf() - a.data.publishedAt.valueOf());
---

<!doctype html>
<html lang="en">
  <head>
    <BaseHead title={SITE_TITLE} description={SITE_DESCRIPTION} />
  </head>
  <body>
    <Header />
    <BgGlow />
    <main class="relative z-10">
      <section class="container">
        {
          posts.length > 0 ? (
            posts.map(post => {
              const { data } = post;
              return (
                <a href={`/blog/${post.id}`} class="block">
                  <div class="bg-card p-6 rounded shadow-md mb-6 hover:shadow-xl transition group">
                    <h3 class="text-xl font-bold group-hover:text-primary transition">
                      {data.title}
                    </h3>
                    <p class="text-muted block text-sm mb-4 mt-2">
                      <FormattedDate date={data.publishedAt} />
                    </p>
                    <p class="text-muted">{data.description}</p>
                  </div>
                </a>
              );
            })
          ) : (
            <div class="text-center grid gap-6 place-items-center text-muted py-48">
              <p class="text-xl">No post published yet.</p>
              <a
                href="/"
                class="bg-primary rounded py-4 px-12 transition-transform active:scale-95"
              >
                Back to homepage
              </a>
            </div>
          )
        }
      </section>
    </main>
    <Footer />
  </body>
</html>
