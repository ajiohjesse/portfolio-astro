---
import Github from "@/icons/Github";
import LinkedIn from "@/icons/LinkedIn";
import Signature from "@/icons/Signature";
import Twitter from "@/icons/Twitter";

const today = new Date();
---

<footer class="container">
  &copy; {today.getFullYear()} Jesse Ajioh. All rights reserved.
  <div class="social-links">
    <a href="https://linkedin.com/in/ajiohjesse" target="_blank">
      <span class="sr-only">Follow Jesse on LinkedIn</span>
      <LinkedIn />
    </a>
    <a href="https://x.com/rehxofficial" target="_blank">
      <span class="sr-only">Follow Jesse on X.com</span>
      <Twitter />
    </a>
    <a href="https://github.com/ajiohjesse" target="_blank">
      <span class="sr-only">Go to Jesse's GitHub repo</span>
      <Github />
    </a>
  </div>
  <Signature
    className="hover:text-primary mx-auto mt-12 w-[140px] transition-colors"
  />
</footer>

<style>
  footer {
    padding: 2em 1em 6em 1em;
    color: var(--color-muted);
    text-align: center;
  }
  .social-links {
    display: flex;
    justify-content: center;
    gap: 1em;
    margin-top: 2em;
  }
  .social-links a {
    text-decoration: none;
    color: var(--color-muted);
  }
  .social-links a:hover {
    color: var(--color-primary);
  }
</style>
